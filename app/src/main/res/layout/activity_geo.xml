<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_geo"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.enriquepalomo.android.geoapp.GeoActivity">

    <TextView
        android:text="@string/texto_pregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:id="@+id/textView" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:text="@string/texto_boton_cierto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/boton_cierto" />

        <Button
            android:text="@string/texto_boton_falso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/boton_falso" />
    </LinearLayout>


</LinearLayout>

